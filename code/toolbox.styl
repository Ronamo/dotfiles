// THE FOLLOWING WERE BORROWED FROM
// CHRIS COYIER
// http://codepen.io/chriscoyier/blog/some-mini-sass-mixins-i-like
// Block that covers entire screen
coverer()
  position absolute
  top 0
  left 0
  width 100%
  height 100%
// CSS vertical / horizontal centering trick
centered()
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
// Name explains it all
word-wrap()
  word-break break-word
  -webkit-hyphens auto
  -moz-hyphens auto
  hyphens auto
// Hide content behind an ellipsis
ellipsis()
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
// Shades of Grey
black($opacity)
  rgba(black, $opacity)
// Shades of Grey
white($opacity)
  rgba(white, $opacity)
// Original content
// IMAGE REPLACEMENT
ir()
  background-color transparent
  border 0
  overflow hidden
  /* IE 6/7 fallback */
  *text-indent -9999px
  &::before
    content ""
    display block
    width 0
    height 150%
// Tiled backgrounds
tiledbg($url, repeat= repeat)
  background url($url) $repeat

// http://www.lukeharrison.net/blog/4-useful-sass-mixins/
tabs(_width, _height, _spacing, _bg-color, _font-color, _font-size, _font-weight, _hover-color, _border-radius)
  margin 0
  list-style none
  & li
    float left
    display table
    width _width
    height _height
    margin-right _spacing
    background _bg-color
    border-top-left-radius _border-radius
    border-top-right-radius _border-radius
    transition background-color 300ms ease
    &:last-child
      margin-right 0
    & a
      display table-cell
      text-align center
      vertical-align middle
      width 100%
      height 100%
      color _font-color
      font-size _font-size
      font-weight _font-weight
      text-decoration none
    &:hover
      background _hover-color
